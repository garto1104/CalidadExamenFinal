@{    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome Poker Game</h1>
    <form action="/home/generar" method="post">
        <input id="numero1_carta" type="number"/>
        <select id="palo1_carta">
            <option value="CORAZON">CORAZON</option>
            <option value="ESPADA">ESPADA</option>
            <option value="COCO">COCO</option>
            <option value="TREBOL">TREBOL</option>

        </select>
        <input id="numero2_carta" type="number"/>
        <select id="palo2_carta">
            <option value="CORAZON">CORAZON</option>
            <option value="ESPADA">ESPADA</option>
            <option value="COCO">COCO</option>
            <option value="TREBOL">TREBOL</option>

        </select>
        <input id="numero3_carta" type="number"/>
        <select id="palo3_carta">
            <option value="CORAZON">CORAZON</option>
            <option value="ESPADA">ESPADA</option>
            <option value="COCO">COCO</option>
            <option value="TREBOL">TREBOL</option>

        </select>
        <input id="numero4_carta" type="number"/>
        <select id="palo4_carta">
            <option value="CORAZON">CORAZON</option>
            <option value="ESPADA">ESPADA</option>
            <option value="COCO">COCO</option>
            <option value="TREBOL">TREBOL</option>

        </select>
        <input id="numero5_carta" type="number"/>
        <select id="palo5_carta">
            <option value="CORAZON">CORAZON</option>
            <option value="ESPADA">ESPADA</option>
            <option value="COCO">COCO</option>
            <option value="TREBOL">TREBOL</option>

        </select>

        <button class="btn btn-primary">Generar Jugada</button>
    </form>
    <table class="table">
        <thead>
        <tr>
            <th>Cartas</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Numero @item.Palo</td>
            </tr>
        }
        </tbody>
    </table>
    
    <h1>Jugada: @ViewBag.Jugada</h1>
</div>